<div class="form-horizontal login-form">
  <h2>{{title}}</h2>
  <form method="post" action="{{context-root}}/login">
    <div class="control-group">
      <input type="text" name="login" placeholder="{{username}}" 
             class="input-block-level" />
    </div>
    <div class="control-group">
      <input type="password" name="password" placeholder="{{password}}" 
             class="input-block-level" />
    </div>
    <div class="control-group">
      <label class="checkbox">
	<input type="checkbox" value="remember-me">
	{{remember-me}}
	</input>
      </label>
    </div>
    <div class="control-group">
      <input type="submit" value="{{submit-log-in}}" 
             class="btn btn-inverse btn-large pull-right">
    </div>
    <div class="links">
      <span><a href="/signup" >{{link-register}}</a> - 
            <a href="">{{link-recover-password}}</a>
      </span>
    </div>
  </form>
</div>
